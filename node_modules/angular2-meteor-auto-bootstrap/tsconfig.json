{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true
  },
  "filesGlob": [
    "modules/**/*.ts"
  ],
  "typings": [
    "typings/angular2-meteor.d.ts",
    "typings/meteor/meteor.d.ts"
  ]
}